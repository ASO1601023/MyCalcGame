<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.miyazakikazuki.mycalcgame.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/button7"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="53dp"
        android:background="@android:color/holo_green_light"
        android:text="7"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/button8"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:color/holo_green_light"
        android:text="8"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="141dp"
        app:layout_constraintLeft_toRightOf="@+id/button7"
        android:layout_marginLeft="26dp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:color/holo_green_light"
        android:text="9"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintLeft_toRightOf="@+id/button8"
        android:layout_marginLeft="30dp" />

    <Button
        android:id="@+id/buttonW"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="21dp"
        android:background="@android:color/holo_blue_light"
        android:onClick="onClick"
        android:text="÷"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintLeft_toRightOf="@+id/button9"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:color/holo_green_light"
        android:text="4"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/button7"
        android:layout_marginLeft="27dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:color/holo_green_light"
        android:text="5"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/button8"
        app:layout_constraintLeft_toRightOf="@+id/button4"
        android:layout_marginLeft="26dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:color/holo_green_light"
        android:text="6"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/button9"
        app:layout_constraintLeft_toRightOf="@+id/button5"
        android:layout_marginLeft="30dp" />

    <Button
        android:id="@+id/buttonK"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="14dp"
        android:background="@android:color/holo_blue_light"
        android:onClick="onClick"
        android:text="×"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintLeft_toRightOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/buttonW" />

    <Button
        android:id="@+id/button1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:color/holo_green_light"
        android:text="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        android:layout_marginLeft="27dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:color/holo_green_light"
        android:text="2"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        app:layout_constraintLeft_toRightOf="@+id/button1"
        android:layout_marginLeft="26dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:color/holo_green_light"
        android:text="3"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/button6"
        app:layout_constraintLeft_toRightOf="@+id/button2"
        android:layout_marginLeft="30dp" />

    <Button
        android:id="@+id/buttonM"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="18dp"
        android:background="@android:color/holo_blue_light"
        android:onClick="onClick"
        android:text="ー"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintLeft_toRightOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/buttonK" />

    <Button
        android:id="@+id/button0"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:color/holo_green_light"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        android:layout_marginLeft="27dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/buttonC"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="18dp"
        android:background="?android:attr/colorPressedHighlight"
        android:onClick="onClick"
        android:text="C"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintLeft_toRightOf="@+id/button0"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/buttonI"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="18dp"
        android:background="?android:attr/colorFocusedHighlight"
        android:onClick="onClick"
        android:text="="
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintLeft_toRightOf="@+id/buttonC"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/buttonP"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="18dp"
        android:background="@android:color/holo_blue_light"
        android:onClick="onClick"
        android:text="+"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintLeft_toRightOf="@+id/buttonI"
        app:layout_constraintTop_toBottomOf="@+id/buttonM" />

    <Button
        android:id="@+id/button"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="16dp"
        android:onClick="onClickGame"
        android:text="ゲームモード"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="58dp"
        app:srcCompat="@drawable/s_images"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="164dp"
        android:layout_height="46dp"
        android:layout_marginLeft="158dp"
        android:layout_marginTop="74dp"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
